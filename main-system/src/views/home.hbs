            {{#each get4ProductOfEachCategory}}
            <div class="section" id="list-product-wp">
                <div class="section-head">
                    <h3 class="section-title">{{this.CategoryName}}</h3>
                </div>
                <div class="section-detail">
                    {{#if this.products}}
                    <ul class="list-item clearfix">
                        {{#each this.products}}
                        <li>
                            <a href="product/detail/{{this.ProductID}}" title="" class="thumb">
                                {{#if this.ImageURL}}
                                <img src="{{this.ImageURL}}">
                                {{else}}
                                <img src="images/img-pro-01.png">
                                {{/if}}
                            </a>
                            <a href="product/detail/{{this.ProductID}}" title=""
                                class="product-name">{{this.ProductName}}</a>
                            <div class="price">
                                <span class="new">{{formatPrice this.Price}}</span>
                                {{#if this.Discount}}
                                <span class="old">{{calculateOldPrice this.Price this.Discount}}</span>
                                {{/if}}
                            </div>
                            <div class="action clearfix">
                                <a href="/add_cart" title="Thêm giỏ hàng" class="add-cart fl-left">Thêm giỏ hàng</a>
                                <a href="/checkout" title="Mua ngay" class="buy-now fl-right">Mua ngay</a>
                            </div>
                        </li>
                        {{/each}}
                    </ul>
                    {{else}}
                    <p>Không có sản phẩm trong danh mục này.</p>
                    {{/if}}
                </div>
            </div>
            {{/each}}
